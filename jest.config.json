{
  "testEnvironment": "node",
  "verbose": true,
  "moduleFileExtensions": [
    "js",
    "ts",
    "tsx",
    "json",
    "node"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/"
  ],
  "collectCoverage": true,
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testMatch": ["<rootDir>/test/**/*.[jt]s"]
}